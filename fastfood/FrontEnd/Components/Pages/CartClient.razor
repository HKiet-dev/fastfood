@page "/cartclient"
@using Microsoft.JSInterop

<div class="container mt-5">
    <div class="row">
        <!-- Left Column -->
        <div class="col-6">
            <h3>Fast food</h3>
            <p>Giỏ hàng > Phương thức thanh toán</p>
            <h4>Thông tin thanh toán</h4>
            <p>Bạn đã có tài khoản? <a href="#">Đăng nhập</a></p>
            <form>
                <div class="mb-3">
                    <label for="name" class="form-label">Họ và tên</label>
                    <input type="text" class="form-control" id="name" placeholder="Họ và tên">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Email">
                </div>
                <div class="mb-3">
                    <label for="phone" class="form-label">Điện thoại</label>
                    <input type="text" class="form-control" id="phone" placeholder="Điện thoại">
                </div>
                <div class="mb-3">
                    <label for="address" class="form-label">Địa chỉ</label>
                    <input type="text" class="form-control" id="address" placeholder="Địa chỉ">
                </div>
                <div class="row">
                    <div class="col-6 mb-3">
                        <label for="city" class="form-label">Tỉnh</label>
                        <select class="form-select" id="city" aria-label="Chọn tỉnh thành">
                            <option value="" selected>Chọn tỉnh thành</option>
                        </select>
                    </div>
                    <div class="col-6 mb-3">
                        <label for="district" class="form-label">Quận/Huyện</label>
                        <select class="form-select" id="district" aria-label="Chọn quận huyện">
                            <option value="" selected>Chọn quận huyện</option>
                        </select>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="ward" class="form-label">Phường/Xã</label>
                    <select class="form-select" id="ward" aria-label="Chọn phường xã">
                        <option value="" selected>Chọn phường xã</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Phương thức thanh toán</button>
            </form>
        </div>
        <!-- Right Column -->
        <div class="col-6">
            <div class="card">
                <div class="container mt-5">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <img src="https://mcdonalds.vn/uploads/2018/food/evm/xEVM_03_6pcs_chicken_mcnuggets_0.png.pagespeed.ic.5p8-nnCwK_.webp" style="width:100px; height:auto" class="img-fluid" alt="Product Image">
                        </div>
                        <div class="flex-grow-1">
                            <div class="card-body p-0">
                                <h5 class="card-title mb-2">Product Name</h5>
                                <p class="card-text mb-1">Product details</p>
                                <p class="card-text mb-0">000VNĐ</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-center ms-3">
                            <button class="btn btn-primary btn-sm me-2">-</button>
                            <span class="product-quantity mx-2">1</span>
                            <button class="btn btn-primary btn-sm ms-2">+</button>
                        </div>
                    </div>
                </div>
            </div>
            >

            <div class="d-flex justify-content-between mt-2">
                <p>Tạm tính</p>
                <p>000VNĐ</p>
            </div>
            <div class="d-flex justify-content-between mt-2">
                <p>Phí ship</p>
                <p>--</p>
            </div>
            <div class="d-flex justify-content-between mt-2">
                <h4>Tổng tiền</h4>
                <h4>000VNĐ</h4>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"></script>
<script>
    var citis = document.getElementById("city");
    var districts = document.getElementById("district");
    var wards = document.getElementById("ward");
    var Parameter = {
        url: "https://raw.githubusercontent.com/kenzouno1/DiaGioiHanhChinhVN/master/data.json",
        method: "GET",
        responseType: "application/json",
    };
    var promise = axios(Parameter);
    promise.then(function (result) {
        renderCity(result.data);
    });

    function renderCity(data) {
        for (const x of data) {
            citis.options[citis.options.length] = new Option(x.Name, x.Id);
        }
        citis.onchange = function () {
            districts.length = 1;
            wards.length = 1;
            if (this.value != "") {
                const result = data.filter(n => n.Id === this.value);

                for (const k of result[0].Districts) {
                    districts.options[districts.options.length] = new Option(k.Name, k.Id);
                }
            }
        };
        districts.onchange = function () {
            wards.length = 1;
            const dataCity = data.filter((n) => n.Id === citis.value);
            if (this.value != "") {
                const dataWards = dataCity[0].Districts.filter(n => n.Id === this.value)[0].Wards;

                for (const w of dataWards) {
                    wards.options[wards.options.length] = new Option(w.Name, w.Id);
                }
            }
        };
    }
</script>
