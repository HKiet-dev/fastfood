@page "/cartcustomer"
<link href="/Product.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="mb-4">GIỎ HÀNG</h2>
    <div class="row">
        <div class="col-md-8">
            <div class="cart-table-cart">
                <table class="table">
                    <thead class="thead-light">
                        <tr>
                            <th></th>
                            <th>tên sản phẩm</th>
                            <th>Số lượng</th>
                            <th>Giá </th>
                            <th>Tổng tiền</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="d-flex align-items-center">
                                <img src="https://mcdonalds.vn/uploads/2018/food/evm/xEVM_03_6pcs_chicken_mcnuggets_0.png.pagespeed.ic.5p8-nnCwK_.webp" alt="Product Image" class="img-fluid product-image-cart">
                            </td>
                            <td>Combo gà vui vẽ</td>
                            <td>
                                <div class="input-group quantity-selector-ms" style="width: 100px;">
                                    <input type="number" id="inputQuantitySelector" class="form-control" aria-live="polite" data-bs-step="counter" name="quantity" title="quantity" value="0" min="0" max="10" step="1" aria-label="Quantity selector" style="width: 100%;">
                                </div>
                            </td>
                            <td>54.00đ</td>
                            <td>54.00đ</td>
                            <td>
                                <button type="button" class="btn btn-primary btn-sm me-1 mb-2">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                        <!-- Repeat this block for each product in the cart -->
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-4">
            <div class="cart-summary-cart p-3 border">
                <h4>Tổng tiền</h4>
                <p>Tổng cộng: 54.00đ</p>
                <select class="form-select mb-3">
                    <option>Thanh toán tiền mặt</option>
                    <option>Chuyển khoản ngân hàng</option>
                </select>
                <button class="btn btn-danger w-100">Thanh Toán</button>
                <p class="mt-3">Chuyển khoản</p>
                <div class="d-flex justify-content-around mb-3">
                    <img src="https://play-lh.googleusercontent.com/dQbjuW6Jrwzavx7UCwvGzA_sleZe3-Km1KISpMLGVf1Be5N6hN6-tdKxE5RDQvOiGRg" alt="momo" class="payment-icon-cart">
                    <img src="https://play-lh.googleusercontent.com/2WHgcuwhtbmfrDEF-D-lYQ4sAk0TlI-aFtqx7lJXK5KV7f8smnofaedP_Opcd3edR2c" alt="Vnpay" class="payment-icon-cart">
                </div>
            </div>
        </div>
    </div>
</div>
