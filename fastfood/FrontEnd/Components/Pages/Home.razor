@page "/"
@using Blazorise


<PageTitle>Home</PageTitle>
@* <link href="~/Product.css" rel="stylesheet" /> *@

<header>
    <div id="carouselExampleDark" class="carousel carousel-dark slide">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="1000">
                <img src="Img/banner big_ 1.jpg" class="d-block w-100" alt="..." height="450px">
            </div>
            <div class="carousel-item" data-bs-interval="2000">
                <img src="Img/banner big_2.jpg" class="d-block w-100" alt="..." height="450px">
            </div>
            <div class="carousel-item">
                <img src="Img/banner big_3.jpg" class="d-block w-100" alt="..." height="450px">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</header>
<Listproduct></Listproduct>
<section class="about_section layout_padding my-3">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-5 text-center">
                <img src="Img/hamburger.jpg" alt="About Us Image" class="about-img img-fluid rounded shadow">
            </div>
            <div class="col-md-7">
                <div class="detail-box">
                    <h2 class="heading_container text-warning">Chúng Tôi Là Fast Foods</h2>
                    <p class="about-text text-warning">
                        Có nhiều phiên bản khác nhau của đoạn văn Lorem Ipsum, nhưng phần lớn đã bị thay đổi theo một số cách, bởi sự hài hước được chèn vào hoặc những từ ngẫu nhiên không trông chút nào đáng tin cậy. Nếu bạn định sử dụng một đoạn văn Lorem Ipsum, bạn cần đảm bảo rằng không có điều gì đáng xấu hổ ẩn giấu ở giữa văn bản.
                    </p>
                    <a href="#" class="btn btn-primary">Đọc Thêm</a>
                </div>
            </div>
        </div>
    </div>
</section>
@* Bảng thông tin *@
<section>
    <div class="container">
        <div class="row">
            <h3 class="text-center mb-4">Đặt Bàn</h3>
            <div class="col-6">
                <form class="p-4 shadow rounded bg-white">
                    <div class="mb-3">
                        <label for="customerName" class="form-label">Họ và Tên</label>
                        <input type="text" class="form-control" id="customerName" placeholder="Nhập họ và tên của bạn" required>
                    </div>
                    <div class="mb-3">
                        <label for="customerEmail" class="form-label">Email</label>
                        <input type="email" class="form-control" id="customerEmail" placeholder="Nhập email của bạn" required>
                    </div>
                    <div class="mb-3">
                        <label for="reservationDate" class="form-label">Ngày</label>
                        <input type="date" class="form-control" id="reservationDate" required>
                    </div>
                    <div class="mb-3">
                        <label for="reservationTime" class="form-label">Giờ</label>
                        <input type="time" class="form-control" id="reservationTime" required>
                    </div>
                    <div class="mb-3">
                        <label for="partySize" class="form-label">Số Lượng Người</label>
                        <input type="number" class="form-control" id="partySize" min="1" placeholder="Nhập số lượng người" required>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-success w-100">Đặt Bàn</button>
                    </div>
                </form>
            </div>
            <div class="col-6">
                <img src="Img/Dathang.jpg" alt="Alternate Text" / class="h-100 w-100">
            </div>
        </div>
    </div>
</section>




