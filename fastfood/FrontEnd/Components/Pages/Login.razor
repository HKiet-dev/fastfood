@page "/login"
@rendermode InteractiveServer
<link rel="stylesheet" href="~/login.css" />
<div class="container">
    <div class="row mt-5">
        <div class="col-md-6 offset-md-3">
            <h3 class="text-center mb-4">Đăng nhập</h3>
            <form>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Mật khẩu</label>
                    <input type="password" class="form-control" id="password" required>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="rememberMe">
                    <label class="form-check-label" for="rememberMe">Ghi nhớ mật khẩu</label>
                </div>
                <button type="submit" class="btn btn-primary btn-block mb-3">Đăng nhập</button>
            </form>
            <div class="text-center">
                <p>Hoặc đăng nhập bằng</p>
                <!-- Google Login Button -->
                <button class="btn btn-outline-dark btn-block" @onclick="()=>GoogleLogin()">
                    <i class="fab fa-google"></i> Đăng nhập với Google
                </button>
            </div>
            <div class="text-center mt-3">
                <span class="text-black"> Bạn chưa có tài khoản?</span>
                <NavLink class="nav-link" href="signUp">
                    <span>Đăng kí</span>
                </NavLink>
            </div>
        </div>
    </div>
</div>

