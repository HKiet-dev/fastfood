@page "/menu"
@inherits Home
<div class="container">
    <h1 class="text-center text-danger">Menu order</h1>
    <section class="navbar-nav">
        <ul class="filters_menu nav justify-content-center">
            <li class="nav-item">
                <a class="nav-link active" href="#" data-filter="*">All</a>
            </li>
            @if (Categories == null)
            {
                <p>Loading...</p>
            }
            else
            {
                foreach (var item in Categories)
                {
                    <li class="nav-item">
                        <NavLink class="nav-link" href="#">@item.Name</NavLink>
                    </li>
                }
            }
        </ul>
    </section>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="row">

                    @if (Products == null)
                    {

                    }
                    else
                    {
                        foreach (var item in Products)
                        {
                            <div class="col-sm-3">
                                <div class="card product-card">
                                    <NavLink class="nav-link" href="productdetails">
                                        <img alt="Product" src="@item.ImageUrl" class="card-img-top">
                                    </NavLink>
                                    <div class="card-body text-center">
                                        <NavLink class="nav-link" href="productdetails">
                                            @* Product Name *@
                                            <h5>@item.Name</h5>
                                            @* Description *@
                                            <p>
                                                @item.Description
                                            </p>
                                            @* Price *@
                                            <span> Giá : @item.Price.ToString("#,##vnđ")</span>
                                            @* button *@
                                            <div class="d-flex justify-content-around mt-2">
                                                <a href="#" class="btn btn-outline-dark"><i class="fas fa-align-left mx-1"></i>Detail</a>
                                                <a href="#" class="btn btn-outline-dark"><i class="fas fa-shopping-cart mx-1"></i></a>
                                            </div>
                                        </NavLink>

                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>

                <div class="view-more-container ">
                    <div class="col-12">
                        <nav aria-label="Page navigation example ">
                            <ul class="pagination justify-content-center text-dark">
                                <li class="page-item">
                                    <a class="page-link text-dark" href="#" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                                <li class="page-item "><a class="page-link text-dark" href="#">1</a></li>
                                <li class="page-item "><a class="page-link text-dark" href="#">2</a></li>
                                <li class="page-item "><a class="page-link text-dark" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link text-dark" href="#" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

