@page "/usermanager"

<h3>Admin</h3>

<div class="container">
	<div class="row">
		<a class="border-danger mb-3 mx-3 btn btn-danger text-black" style="max-width: 250px;" href="usermanager">
			<h5 class="card-title m-5">Users Manager</h5>
		</a>
		<a class="card border-warning mb-3 mx-3 btn btn-warning text-black" style="max-width: 250px;" href="productmanager">
			<h5 class="card-title m-5">Products Manager</h5>
		</a>
		<a class="card border-info mb-3 mx-3 btn btn-info text-black" style="max-width: 250px;" href="ordermanager">
			<h5 class="card-title m-5">Orders Manager</h5>
		</a>
		<a class="card border-success mb-3 mx-3 btn btn-success text-black" style="max-width: 250px;" href="categorymanager">
			<h5 class="card-title m-5">Category Manager</h5>
		</a>
	</div>

	<!-- Modal -->
	<div class="modal fade" id="createFood" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog modal-large">
			<div class="modal-content">
				<div class="container-fluid p-5">
					<form class="row">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="form-group input-group mb-3">
							@* <label class="control-label fw-bold input-group-text">AccountId:</label> *@
							<input type="hidden" asp-for="User Id" class="form-control w-100" />
							@* <span asp-validation-for="AccountId" class="text-danger"></span> *@
						</div>
						<div class="form-group input-group mb-3">
							<label class="control-label fw-bold input-group-text">Username :</label>
							<input asp-for="Username" class="form-control w-100" />
							<span asp-validation-for="Username" class="text-danger"></span>
						</div>
						<div class="form-group input-group mb-3">
							<label class="control-label fw-bold input-group-text">FullName:</label>
							<input asp-for="FullName" class="form-control w-100" />
							<span asp-validation-for="FullName" class="text-danger"></span>
						</div>
						<div class="form-group input-group mb-3">
							<label class="control-label fw-bold input-group-text">Gender:</label>
							<input asp-for="Gender" class="form-control w-100" />
							<span asp-validation-for="Gender" class="text-danger"></span>
						</div>
						<div class="form-group input-group mb-3">
							<label class="control-label fw-bold input-group-text">PhoneNumber:</label>
							<input asp-for="PhoneNumber" class="form-control w-100" />
							<span asp-validation-for="PhoneNumber" class="text-danger"></span>
						</div>
						<div class="form-group input-group mb-3">
							<label class="control-label fw-bold input-group-text">Address:</label>
							<input asp-for="Address" class="form-control w-100" />
							<span asp-validation-for="Address" class="text-danger"></span>
						</div>
						<div class="form-group input-group mb-3">
							<label class="control-label fw-bold input-group-text">Email:</label>
							<input asp-for="Email" class="form-control w-100" />
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>
						<div class="form-group input-group mb-3">
							<label class="control-label fw-bold input-group-text">Avatar:</label>
							<input asp-for="Avatar" class="form-control w-100" />
							<span asp-validation-for="Avatar" class="text-danger"></span>
						</div>
						<div class="form-group input-group mb-3">
							<label class="control-label fw-bold input-group-text">EmailConfirmed:</label>
							<input asp-for="EmailConfirmed" class="form-control w-100" />
							<span asp-validation-for="EmailConfirmed" class="text-danger"></span>
						</div>
						<div class="form-group input-group mb-3">
							<label class="control-label fw-bold input-group-text">Role:</label>
							<input asp-for="Role" class="form-control w-100" />
							<span asp-validation-for="Role" class="text-danger"></span>
						</div>
						<div class="form-group input-group mb-3">
							<label class="control-label fw-bold input-group-text">Status:</label>
							<input asp-for="Status" class="form-control w-100" />
							<span asp-validation-for="Status" class="text-danger"></span>
						</div>
						<div class="form-group input-group mb-3">
							@* <label class="control-label fw-bold input-group-text">RowVersion:</label> *@
							@* <input type="hidden" asp-for="RowVersion" class="form-control w-100" /> *@
							@* <span asp-validation-for="RowVersion" class="text-danger"></span> *@
						</div>
						<div class="form-group mt-3 text-center">
							<input type="submit" value="Create" asp-action="CreateAccount" class="btn btn-danger w-50" />
						</div>
						<div class="form-group mt-3 text-center">
							<input type="submit" value="Update" asp-action="UpdateAccount" class="btn btn-primary w-50" />
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>

	@* <partial name="_CreateAccount"></partial> *@
